<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:id="@+id/drawerLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8E8E8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@android:color/background_light"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:weightSum="1"
                    tools:ignore="UselessLeaf,UselessParent">

                    <TextView
                        android:id="@+id/textView109"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="          ข้อมูลการเคลม"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView155"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_weight="1"
                        android:text="          เลขที่การเคลม  :  8000000008"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView134"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        android:text="ใบมอบฉันทะ"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="0.19"
                        app:srcCompat="@drawable/page"
                        tools:ignore="ContentDescription,InefficientWeight" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="0.00"
                    android:gravity="top"
                    android:weightSum="1"
                    tools:ignore="InefficientWeight,UselessLeaf">

                    <TextView
                        android:id="@+id/textView138"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:text="ลงนาม  :"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,NestedWeights" />

                    <Button
                        android:id="@+id/button53"
                        android:layout_width="191dp"
                        android:layout_height="86dp"
                        android:background="@color/text_highlight2" />

                    <TextView
                        android:id="@+id/textView140"
                        android:layout_width="151dp"
                        android:layout_height="wrap_content"
                        android:text="ผู้เรียกร้อง"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView139"
                            android:layout_width="152dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.04"
                            android:text="วันที่  :  "
                            android:textAlignment="textEnd"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/Output2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center"
                            android:layout_weight="0.04"
                            android:ems="10"
                            android:gravity="center_vertical|center"
                            android:inputType="date" />

                        <ImageButton
                            android:id="@+id/changcalendar"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/background_White"
                            app:srcCompat="@drawable/calendar" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView143"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btConfirmdata"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_layout_height"
                        android:layout_margin="10dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button"
                        android:text="ส่งข้อมูล"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="@dimen/button_text_size"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

                    <Button
                        android:id="@+id/btBrack"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_layout_height"
                        android:layout_margin="10dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/button"
                        android:text="ย้อนกลับ"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="@dimen/button_text_size"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

                    <Button
                        android:id="@+id/btCancle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_layout_height"
                        android:layout_margin="10dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button"
                        android:text="ยกเลิกรายการ"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="@dimen/button_text_size"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/menu_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/menu_bg"
            app:srcCompat="@drawable/editpassword"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView91"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView15"
            android:gravity="bottom"
            android:text="Somsee  Jaidee"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView172"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView91"
            android:gravity="center_vertical"
            android:text="รหัส  : 09876"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView89"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView172"
            android:text="ทีมลูก  :  น้ำโขง"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView89"
            android:layout_marginBottom="30dp"
            android:text="สาขา  :  หนองบัวลำภู"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            tools:ignore="HardcodedText" />

        <ListView
            android:id="@+id/list"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_below="@id/textView90"
            android:layout_gravity="left"
            android:background="@color/menu_bg"
            android:divider="@null"
            android:entries="@array/CustomerMenu"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded">

        </ListView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>