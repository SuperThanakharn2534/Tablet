<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:id="@+id/drawerLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:id="@+id/linear_step2.1"
                android:layout_width="390dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@color/background_White"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.06"
                    android:background="@android:color/background_light"
                    android:gravity="bottom"
                    android:text="ประกันบุคคล"
                    android:textAlignment="center"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.06"
                    android:background="@android:color/background_light"
                    android:gravity="center"
                    android:text="เลือกรูปแบบประกัน"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,InefficientWeight,NestedWeights" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="143dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|center"
                        tools:ignore="InefficientWeight"
                        android:layout_weight="0.16" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:layout_margin="30dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/person"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_step2.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:weightSum="1"
                tools:ignore="InefficientWeight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="111dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="@color/menu_bg"
                        android:text="รายละเอียดกรมธรรม์"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle,HardcodedText" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@android:color/darker_gray"
                        android:text="ผลตอบแทน"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle,HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.83"
                    android:orientation="vertical"
                    tools:ignore="InefficientWeight,NestedWeights">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="289dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/imageView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:background="@android:color/background_light"
                            app:srcCompat="@drawable/page2"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessParent">

                        <Button
                            android:id="@+id/button12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/button"
                            android:text="เพิ่มรายการที่ลูกค้าสนใจ"
                            android:textColor="@android:color/background_light"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

                        <Button
                            android:id="@+id/button11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_weight="0.5"
                            android:background="@drawable/button"
                            android:padding="10dp"
                            android:text="ปิดการขาย"
                            android:textColor="@android:color/background_light"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="ButtonStyle,HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/menu_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/menu_bg"
            app:srcCompat="@drawable/editpassword"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView91"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView15"
            android:gravity="bottom"
            android:text="Somsee  Jaidee"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView172"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView91"
            android:gravity="center_vertical"
            android:text="รหัส  : 09876"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView89"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView172"
            android:text="ทีมลูก  :  น้ำโขง"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView89"
            android:layout_marginBottom="30dp"
            android:text="สาขา  :  หนองบัวลำภู"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            tools:ignore="HardcodedText" />

        <ListView
            android:id="@+id/list"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_below="@id/textView90"
            android:layout_gravity="left"
            android:background="@color/menu_bg"
            android:divider="@null"
            android:entries="@array/CustomerMenu"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded">

        </ListView>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>