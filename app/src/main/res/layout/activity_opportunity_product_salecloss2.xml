<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:id="@+id/drawerLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8E8E8"
            android:orientation="horizontal"
            tools:ignore="ScrollViewSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@android:color/background_light"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        tools:ignore="InefficientWeight"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView61"
                            android:layout_width="547dp"
                            android:layout_height="wrap_content"
                            android:text="ข้อมูลผู้ชำระเบี้ย"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/common_google_signin_btn_text_light_pressed"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,InefficientWeight,NestedWeights"
                            android:layout_weight="0.04" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="InefficientWeight">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/background_light"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView62"
                                android:layout_width="308dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <EditText
                                android:id="@+id/editText6"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="ความสัมพันธ์กับผู้เอาประกัน"
                                android:inputType="textPersonName"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView70"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/background_light"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/textView63"
                                android:layout_width="308dp"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <EditText
                                android:id="@+id/editText9"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="เลขบัติรประชาชน"
                                android:inputType="textPersonName"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView173"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="     "
                                tools:ignore="HardcodedText" />

                            <Button
                                android:id="@+id/button19"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_layout_height"
                                android:background="@drawable/button"
                                android:text="ตรวจสอบ"
                                android:textAllCaps="false"
                                android:textColor="@android:color/background_light"
                                android:textSize="@dimen/button_text_size"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SpUsage"
                                android:layout_weight="0.13" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/background_light"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView64"
                                android:layout_width="308dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <EditText
                                android:id="@+id/editText10"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="ชื่อ - นามสกุล "
                                android:inputType="textPersonName"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView71"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.20" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/background_light"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView65"
                                android:layout_width="308dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <EditText
                                android:id="@+id/editText11"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="อาชีพ"
                                android:inputType="textPersonName"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView72"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/background_light"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView66"
                                android:layout_width="308dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,NestedWeights" />

                            <EditText
                                android:id="@+id/editText12"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="ระดับอาชีพ"
                                android:inputType="textPersonName"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView73"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.00"
                            android:background="@android:color/background_light"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView67"
                                android:layout_width="308dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,NestedWeights" />

                            <EditText
                                android:id="@+id/editText13"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="เบอร์โทรศัพท์"
                                android:inputType="phone"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView74"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                tools:ignore="NestedWeights" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/background_light"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView68"
                                android:layout_width="307dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,NestedWeights" />

                            <EditText
                                android:id="@+id/editText14"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="อีเมล์"
                                android:inputType="textEmailAddress"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/textView75"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@android:color/background_light"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView69"
                            android:layout_width="242dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,NestedWeights"
                            android:layout_weight="0.10" />

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextView4"
                            android:layout_width="400dp"
                            android:layout_height="73dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.17"
                            android:background="@color/mainbrackground"
                            android:hint="ที่อยู่ผู้ชำระเบี้ย"
                            android:textAlignment="viewStart"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.07"
                        android:gravity="top"
                        tools:ignore="NestedWeights">

                        <Button
                            android:id="@+id/button20"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_layout_height"
                            android:layout_margin="10dp"
                            android:layout_weight="0.15"
                            android:background="@drawable/button"
                            android:text="ถัดไป"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold"
                            tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

                        <Button
                            android:id="@+id/button21"
                            android:layout_width="144dp"
                            android:layout_height="@dimen/button_layout_height"
                            android:layout_margin="10dp"
                            android:layout_weight="0.11"
                            android:background="@drawable/button"
                            android:text="ย้อนกลับ"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold"
                            tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

                        <Button
                            android:id="@+id/button22"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_layout_height"
                            android:layout_margin="10dp"
                            android:layout_weight="0.11"
                            android:background="@drawable/button"
                            android:text="ยกเลิกรายการ"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold"
                            tools:ignore="ButtonStyle,HardcodedText,SpUsage" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/menu_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/menu_bg"
            app:srcCompat="@drawable/editpassword"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView91"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView15"
            android:gravity="bottom"
            android:text="Somsee  Jaidee"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView172"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView91"
            android:gravity="center_vertical"
            android:text="รหัส  : 09876"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView89"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView172"
            android:text="ทีมลูก  :  น้ำโขง"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView89"
            android:layout_marginBottom="30dp"
            android:text="สาขา  :  หนองบัวลำภู"
            android:textAlignment="center"
            android:textColor="@color/background_White"
            tools:ignore="HardcodedText" />

        <ListView
            android:id="@+id/list"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_below="@id/textView90"
            android:layout_gravity="left"
            android:background="@color/menu_bg"
            android:divider="@null"
            android:entries="@array/CustomerMenu"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded">

        </ListView>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>